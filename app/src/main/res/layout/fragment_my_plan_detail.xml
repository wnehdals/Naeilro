<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/bottom_navigation_height"
    tools:context=".ui.myplan.MyPlanDetailFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_plan_node_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/my_plan_get_recommend_path_button"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_rect_peach_gradient"
                android:text="여행 경로 추천 받기"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>

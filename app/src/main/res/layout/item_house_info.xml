<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray6"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white1"
        android:layout_margin="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/house_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/house_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                tools:text="엘시티관광호텔"/>
            <TextView
                android:id="@+id/house_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                tools:text="경상남도 창원시 마산함포구 해안대로 317"/>
            <TextView
                android:id="@+id/house_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimaryLight"
                tools:text="010-5134-1234"/>
            <TextView
                android:id="@+id/hanok_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_rect_boundary_color_radius_18dp"
                android:textColor="@color/green3"
                android:paddingHorizontal="8dp"
                android:text="한옥"/>



        </LinearLayout>
    </LinearLayout>

</LinearLayout>